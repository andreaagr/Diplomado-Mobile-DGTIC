<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/light_coral</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_app_logo_round</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">3000</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="android:windowSplashScreenBrandingImage">@drawable/branding_image</item>
        <item name="postSplashScreenTheme">@style/Theme.GreatWondersAPI</item>
    </style>
</resources>